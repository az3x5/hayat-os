# Database connection string
# For local PostgreSQL: postgresql://user:password@localhost:5432/hayatos
# For Render PostgreSQL: Auto-injected via render.yaml
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/hayatos"

# Server port (Render uses 10000)
PORT=3001

# JWT Secret - Auto-generated in production via render.yaml
JWT_SECRET=hayatos-jwt-secret-dev-only-change-in-production

# Gemini API Key (for AI insights)
GEMINI_API_KEY=your_gemini_api_key_here

# Cloudflare R2 Audio URL (public bucket URL)
# Example: https://pub-xxxxx.r2.dev or custom domain
R2_AUDIO_URL=https://your-r2-bucket.r2.dev

# Frontend URL for CORS (Cloudflare Pages URL)
# Example: https://hayat-os.pages.dev
FRONTEND_URL=http://localhost:5173
